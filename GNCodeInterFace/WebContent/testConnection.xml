<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC

"-//Hibernate/Hibernate Mapping DTD 3.0//EN"

"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

<class name="com.hibernateTest.User" table="MileStone_Login">

<id name="UserID" type="int" column="employeeID" unsaved-value="0">

<generator class="increment"/>

</id>

<property name="UserName" type="java.lang.String" column="userid" not-null="true" length="50" />

<property name="password" type="java.lang.String" column="password" not-null="true" />

<property name="role" type="int" column="role" not-null="true" />

</class>

</hibernate-mapping>